import datetime

def ganesh_jayanti_wishes():
    current_date = datetime.datetime.now().strftime("%d-%m-%Y")
    message = """
    Ganpati Bappa Morya!

    May Lord Ganesha bless you with wisdom, prosperity, and happiness on this auspicious occasion of Ganesh Jayanti.
    May all obstacles in your life be removed, and success follow you in every step.

    Wishing you and your family a joyful and blessed Ganesh Jayanti!

    Date: {}
    """.format(current_date)
    

    print(message)

ganesh_jayanti_wishes()
